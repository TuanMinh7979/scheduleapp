generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum cho UserSex
enum UserSex {
  MALE
  FEMALE
}

// Model Admin
model Admin {
  id       Int    @id @default(autoincrement()) // id là Int và tự tăng
  username String
}

// Model Teacher
model Teacher {
  id   Int     @id @default(autoincrement()) // id là Int và tự tăng
  name String
  sex  UserSex
}

// Model Class
model Class {
  id   Int    @id @default(autoincrement()) // id là Int và tự tăng
  name String
}

// Model Subject
model Subject {
  id   Int    @id @default(autoincrement()) // id là Int và tự tăng
  name String
  total Int       @default(0)
}

// Model Event
model Event {
  id                   Int       @id @default(autoincrement()) // id là Int và tự tăng
  name                 String
  day                  DateTime 
  classId             Int
  subjectAndTeacherId Int
  dayPartId           Int // Thêm trường dayPartId, kiểu Int
  mode                 String    @default("online")

}

// Model SubjectAndTeacher
model SubjectAndTeacher {
  id        Int    @id @default(autoincrement()) // id là Int và tự tăng
  subjectId Int
  teacherId Int
}

// Model DayPart
model DayPart {
  id   Int    @id @default(autoincrement()) // id là Int và tự tăng
  name String
}
